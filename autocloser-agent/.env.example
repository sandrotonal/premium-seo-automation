# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/autocloser
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://:password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=30d

# WhatsApp Integration (Choose one: Twilio OR Meta)
# Twilio Configuration
WHATSAPP_TWILIO_ACCOUNT_SID=your_twilio_account_sid
WHATSAPP_TWILIO_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_PHONE_NUMBER=+1234567890

# Meta Cloud API (Alternative to Twilio)
META_ACCESS_TOKEN=your_meta_access_token
META_VERIFY_TOKEN=your_meta_verify_token
META_APP_SECRET=your_meta_app_secret
META_WEBHOOK_SECRET=your_meta_webhook_secret

# Payment Processing (iyzico - Turkey)
IYZIPAY_API_KEY=your_iyzico_api_key
IYZIPAY_SECRET=your_iyzico_secret
IYZIPAY_BASE_URL=https://sandbox-api.iyzipay.com
IYZIPAY_WEBHOOK_SECRET=your_iyzico_webhook_secret

# PayU (Alternative Payment Provider)
PAYU_MERCHANT_ID=your_payu_merchant_id
PAYU_SECRET_KEY=your_payu_secret_key
PAYU_CLIENT_ID=your_payu_client_id
PAYU_ENVIRONMENT=sandbox

# AI Provider (OpenAI)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternative AI Providers
ANTHROPIC_API_KEY=your_anthropic_key
AZURE_OPENAI_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=your_azure_endpoint

# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:19006
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase (Push Notifications)
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_fcm_project_id

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@autocloser.com
EMAIL_FROM_NAME=AutoCloser Agent

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=autocloser-files
S3_PUBLIC_URL=https://your-cdn.com

# Monitoring & Observability
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Webhook URLs
WEBHOOK_BASE_URL=https://your-domain.com
PAYMENT_WEBHOOK_URL=https://your-domain.com/webhooks/payment
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhooks/whatsapp

# Feature Flags
FEATURE_AI_RESPONSES=true
FEATURE_HUMAN_HANDOFF=true
FEATURE_PAYMENT_PROCESSING=true
FEATURE_ANALYTICS=true
FEATURE_TELEGRAM_BOT=false
FEATURE_INSTAGRAM_DM=false

# WhatsApp Template Categories
WHATSAPP_TEMPLATE_APPROVED=true
WHATSAPP_BUSINESS_VERIFIED=false

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Testing
JEST_WORKERS=4
CYPRESS_BASE_URL=http://localhost:3000
PLAYWRIGHT_BASE_URL=http://localhost:3000

# Development Tools
SWAGGER_PATH=/docs
GRAPHQL_PLAYGROUND=true

# Performance Monitoring
APM_ENABLED=true
APM_SERVICE_NAME=autocloser-api
APM_ENVIRONMENT=development

# Compliance
KVKK_COMPLIANCE=true
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# SMS Service (Twilio SMS for OTP)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Admin Configuration
ADMIN_EMAIL=admin@autocloser.com
ADMIN_PASSWORD=change-this-in-production

# API Keys for External Services
GOOGLE_MAPS_API_KEY=your_google_maps_key
STRIPE_PUBLISHABLE_KEY=your_stripe_key
STRIPE_SECRET_KEY=your_stripe_secret

# Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_EXTERNAL_APIS=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,tr,es,fr,de
TIMEZONE=UTC

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics